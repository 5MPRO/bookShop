<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ThemTheLoaiSach">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/imgELSP"/>

    <EditText
        android:id="@+id/edtETLSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgELSP"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/serif"
        android:hint="Nhập tên loại sách"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnEChonHA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtETLSP"
        android:layout_marginTop="25dp"
        android:background="@drawable/boder_btn_dangnhap"
        android:backgroundTint="@color/color_menu"
        android:fontFamily="@font/serif"
        android:text="Chọn hình ảnh"
        android:textColor="@color/white" />
    <Button
        android:backgroundTint="@color/color_menu"
        android:textColor="@color/white"
        android:background="@drawable/boder_btn_dangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEChonHA"
        android:text="Sửa"
        android:layout_marginTop="25dp"
        android:id="@+id/btnESuaLSP"/>
</RelativeLayout>