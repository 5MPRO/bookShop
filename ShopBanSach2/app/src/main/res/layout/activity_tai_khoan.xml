<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TaiKhoanActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="10">
    <LinearLayout
        android:layout_weight="9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v7.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbartaikhoan"
            app:title="Tài khoản"
            app:titleTextColor="@color/white"
            android:background="@color/color_menu"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:orientation="vertical"
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/color_menu"
                    android:src="@drawable/icon_user"
                    tools:ignore="SpeakableTextPresentCheck" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textviewtenkh"
                        android:text="Email người dùng"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btnthongtintk"
                android:textAllCaps="false"
                android:textColor="@color/textcolor"
                android:drawablePadding="20dp"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:drawableStart="@drawable/icon_person"
                android:text="Thông tin tài khoản"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btndonhangcuatoi"
                android:textAllCaps="false"
                android:textColor="@color/textcolor"
                android:drawablePadding="20dp"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:drawableStart="@drawable/icon_home"
                android:text="Đơn hàng của tôi"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:textAllCaps="false"
                android:textColor="@color/textcolor"
                android:drawablePadding="20dp"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:drawableStart="@drawable/ic_baseline_lock_reset_24"
                android:text="Đổi mật khẩu"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:textAllCaps="false"
                android:textColor="@color/textcolor"
                android:drawablePadding="20dp"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:text="Địa chỉ giao hàng"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:textAllCaps="false"
                android:textColor="@color/textcolor"
                android:drawablePadding="20dp"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:drawableStart="@drawable/ic_baseline_support_agent_24"
                android:text="Hỗ trợ"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/buttonDangXuat"
                android:textColor="@color/color_menu"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FFFEFE"
                android:background="@drawable/boder_btn_dangky"
                android:text="Đăng xuất"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:text="Phiên bản 1.20 (20)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.design.widget.BottomNavigationView
            android:layout_gravity="center_horizontal"
            android:id="@+id/navigationmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EDEBEB"
            app:menu="@menu/navigation" />
    </LinearLayout>
</LinearLayout>