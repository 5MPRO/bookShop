<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.DrawerLayout
            android:layout_weight="9"
            android:id="@+id/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbarmanhinhchinh"
                        app:titleTextColor="@color/white"
                        app:title="Trang chủ"
                        android:background="@color/color_menu"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"/>
                    <ViewFlipper
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/viewflipper"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                    <LinearLayout
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="#C259D5"
                            android:text="CHÍNH SÁCH KHÁCH HÀNG TẠI NEW SHOP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <android.support.design.widget.FloatingActionButton
                                    android:backgroundTint="@color/white"
                                    android:src="@drawable/ic_car"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="91dp"
                                    android:layout_height="35dp"
                                    android:text="Free Shipping trên 250.000đ"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <android.support.design.widget.FloatingActionButton
                                    android:backgroundTint="@color/white"
                                    android:src="@drawable/iconhc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="91dp"
                                    android:layout_height="35dp"
                                    android:text="Sản phẩm chính hãng"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <android.support.design.widget.FloatingActionButton
                                    android:backgroundTint="@color/white"
                                    android:src="@drawable/icon_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="91dp"
                                    android:layout_height="35dp"
                                    android:text="Nhận hàng rồi thanh toán"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <android.support.design.widget.FloatingActionButton
                                    android:backgroundTint="@color/white"
                                    android:src="@drawable/ic_doitra"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="91dp"
                                    android:layout_height="35dp"
                                    android:text="Đổi trả dễ dàng"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:background="@color/color_lightblue"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="Siêu khuyến mãi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerviewsanphamkhuyenmai"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </android.support.v7.widget.RecyclerView>
                        </LinearLayout>
                        <LinearLayout
                            android:background="#E5FA80"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="560dp">
                            <TextView
                                android:padding="5dp"
                                android:textColor="#f20"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="Bán chạy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclersanphammoinhat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <android.support.design.widget.NavigationView
                android:id="@+id/navigationviewmanhinhchinh"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/listviewmanhinhchinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
            </android.support.design.widget.NavigationView>
        </android.support.v4.widget.DrawerLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:background="@drawable/boder_menu_activity"
            android:weightSum="5"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:id="@+id/ln_home"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/home_menu_activity"
                    android:tint="#f20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trang chủ"
                    android:textColor="#f20"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:tint="@color/black"
                    android:scaleType="fitXY"
                    android:src="@drawable/list_menu_activity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="Danh mục"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:tint="@color/black"
                    android:src="@drawable/search_menu_activity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="Tìm kiếm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_tb"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:tint="@color/black"
                    android:src="@drawable/bell_menu_activity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="Thông báo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_tk"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:tint="@color/black"
                    android:src="@drawable/ic_baseline_person_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="Tài khoản"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>