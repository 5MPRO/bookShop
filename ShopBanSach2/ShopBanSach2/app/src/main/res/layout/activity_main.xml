<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@color/bookApp"
    android:orientation="vertical">

    <LinearLayout
        android:weightSum="9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.DrawerLayout
            android:layout_weight="9"
            android:id="@+id/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:background="@color/bookApp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbarmanhinhchinh"
                        app:titleTextColor="@color/white"
                        app:title="Trang chủ"
                        android:background="@color/pirimary"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"/>
                    <ViewFlipper

                        android:id="@+id/viewflipper"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="30dp"
                        android:backgroundTint="@color/bookApp"
                        >

                        <LinearLayout
                            android:outlineAmbientShadowColor="@color/black"
                            android:outlineSpotShadowColor="@color/black"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            >
                            <TextView
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textColor="#C259D5"
                                android:text="CHÍNH SÁCH KHÁCH HÀNG TẠI NEW SHOP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <android.support.design.widget.FloatingActionButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/white"
                                        android:src="@drawable/ic_car" />

                                    <TextView
                                        android:layout_width="85dp"
                                        android:layout_height="35dp"
                                        android:gravity="center"
                                        android:text="Free Shipping trên 250.000đ"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <android.support.design.widget.FloatingActionButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/white"
                                        android:src="@drawable/iconhc" />

                                    <TextView
                                        android:layout_width="85dp"
                                        android:layout_height="35dp"
                                        android:gravity="center"
                                        android:text="Sản phẩm chính hãng"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <android.support.design.widget.FloatingActionButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/white"
                                        android:src="@drawable/icon_money" />

                                    <TextView
                                        android:layout_width="85dp"
                                        android:layout_height="35dp"
                                        android:gravity="center"
                                        android:text="Nhận hàng rồi thanh toán"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <android.support.design.widget.FloatingActionButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/white"
                                        android:src="@drawable/ic_doitra" />

                                    <TextView
                                        android:layout_width="85dp"
                                        android:layout_height="35dp"
                                        android:gravity="center"
                                        android:text="Đổi trả dễ dàng"
                                        android:textSize="10sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:background="@color/bookApp"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="5dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="Siêu khuyến mãi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerviewsanphamkhuyenmai"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="20dp"></android.support.v7.widget.RecyclerView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:background="@color/bookApp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="560dp">
                            <TextView
                                android:padding="5dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="Bán chạy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclersanphammoinhat"
                                android:layout_width="match_parent"
                                android:layout_height="470dp"
                                android:nestedScrollingEnabled="false" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <android.support.design.widget.NavigationView
                android:id="@+id/navigationviewmanhinhchinh"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"


                >
                <ListView
                    android:id="@+id/listviewmanhinhchinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </ListView>


            </android.support.design.widget.NavigationView>
        </android.support.v4.widget.DrawerLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_gravity="end"
            >

            <LinearLayout
                android:id="@+id/ln_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/pirimary"
                    android:src="@drawable/home_menu_activity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trang chủ"
                    android:textColor="@color/color_lightblue"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/list_menu_activity"
                    android:tint="@color/textcolor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danh mục"
                    android:textColor="@color/textcolor"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_tk_ct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search_menu_activity"
                    android:tint="@color/textcolor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tìm kiếm"
                    android:textColor="@color/textcolor"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_tb"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bell_menu_activity"
                    android:tint="@color/textcolor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông báo"
                    android:textColor="@color/textcolor"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_tk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_person_24"
                    android:tint="@color/textcolor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài khoản"
                    android:textColor="@color/textcolor"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>